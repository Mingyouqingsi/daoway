.wrap
  .header
    height 130px
    width 100%
    position absolute
    left 0px
    top 0px
    &.active
      animation anim 2s
      position fixed
      top 0px
      left 0px
      z-index 10
      background rgba(255,255,255,.9)
    .header-top-warp
      height 40px
      background #f1f1f1
      .header-top
        height 40px
        width 1200px
        margin 0 auto
        .nav
          float right
          li
            font-weight 700
            padding 0 15px
            line-height 40px
            float left
            &:hover
              background #ffffff
              a
                color #e94840
            a
              color black
              font-weight 700
      .left
        line-height 40px
        float left
        a
          span
            font-weight 700
    .header-bottom
      width 1200px
      height 90px
      margin 0 auto
      .logo
        float left
        width 280px
        height 100%
        a
          display block
          height 100%
          text-align center
          img
            width 280px
            height 40px
            margin-top 20px
      .search
        width 700px
        height 100%
        float left
        margin-left 50px
        .inputwrap
          height 36px
          width 650px
          margin-top 28px
          span
            background #e94840
            display inline-block
            cursor pointer
            height 100%
            text-align center
            line-height 34px
            color #fff
            font-weight 300
            width 120px
            float left
            border-radius 0 5px 5px 0
          input
            outline none
            width 500px
            height 100%
            float left
            border 2px solid #e94840
            box-sizing border-box
            border-radius 5px 0 0 5px
      .right
        float right
        height 100%
        width 90px
        img
          width 100%
          height 100%
  .content
    width 1200px
    margin 130px auto 0
    h2
      margin-bottom 20px
      font-weight 700
      font-size 20px
    .left
      width 970px
      float left
      height 900px
      ul
        li
          width: 232px;
          height: 300px;
          border: 1px solid #eaeaea;
          padding: 10px;
          float: left;
          margin-right: 10px;
          margin-bottom: 10px;
          background: #fff;
          cursor: pointer;
          box-sizing border-box
          &:hover
            box-shadow: 5px 5px 10px #ccc;
          img
            width 210px
            height 210px
          .ptop
            margin-top: 15px;
            height: 26px;
            line-height: 26px
            img
              width 18px
              height 17px
            b
              font-weight 700
              font-size: 16px;
              margin-left: 0.1rem;
          .bottomp
            height: 26px;
            line-height: 26px
            font-size: 12px;
            color: #929292;
            i
              float right
    .right
      background palegoldenrod
      width: 230px
      float right
      img
        width 100%
@keyframes anim {
  0%{
    transform: rotateX(-30deg);
  }
  100%{
    transform: rotateX(0deg);
  }
}