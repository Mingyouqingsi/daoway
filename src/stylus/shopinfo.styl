.warp
  .header
    height 130px
    width 100%
    position absolute
    left 0px
    top 0px
    &.active
      transition 1s
      animation anim 2s
      position fixed
      top 0px
      left 0px
      z-index 10
      background rgba(255,255,255,.9)
    .header-top-warp
      height 40px
      background #f1f1f1
      .header-top
        height 40px
        width 1200px
        margin 0 auto
        .nav
          float right
          li
            font-weight 700
            padding 0 15px
            line-height 40px
            float left
            &:hover
              background #ffffff
              a
                color #e94840
            a
              color black
              font-weight 700
      .left
        line-height 40px
        float left
        a
          span
            font-weight 700
    .header-bottom
      width 1200px
      height 90px
      margin 0 auto
      .logo
        float left
        width 280px
        height 100%
        a
          display block
          height 100%
          text-align center
          img
            width 280px
            height 40px
            margin-top 20px
      .search
        width 700px
        height 100%
        float left
        margin-left 50px
        .inputwrap
          height 36px
          width 650px
          margin-top 28px
          span
            background #e94840
            display inline-block
            cursor pointer
            height 100%
            text-align center
            line-height 34px
            color #fff
            font-weight 300
            width 120px
            float left
            border-radius 0 5px 5px 0
          input
            outline none
            width 500px
            height 100%
            float left
            border 2px solid #e94840
            box-sizing border-box
            border-radius 5px 0 0 5px
      .right
        float right
        height 100%
        width 90px
        img
          width 100%
          height 100%


  .content
    width 1200px
    margin 140px auto 0
    height 800px
    background #f1f1f1
    .commen
      margin-top 10px
      width 960px
      h3
        font-size 26px
        font-weight 700
        color #e94840
      .userlist
        li
          width: 96%;
          border-bottom: 1px solid #e5e5e5;
          margin: 0 3%;
          padding-top: 20px;
          img
            width 40px
            height 40px
            border-radius: 6px;
            display: inline-block;
            vertical-align: top;
            .usertitle
              width: auto;
              height: auto
              line-height 28px
            .middle
              line-height 28px

@keyframes anim {
  0%{
    transform: rotateX(20deg);
  }
  100%{
    transform: rotateX(0deg);
  }
}